<article class="post">
  <section class="post-head">
    <h2><%= link_to post.title, post_path(post) %></h2>
    <small>
      <time><%= post.created_at.to_date.strftime("%d %B, %Y") %></time>

      <%= link_to 'Изменить', edit_post_path(post) %>

      <%= link_to 'Удалить', post_path(post), method: :delete, date: { confirm: 'Вы уверены?' } %>
    </small>
  </section>

  <section class="post-summary clearfix">
    <div class="testr">
      <%= image_tag post.image.url, class: 'img-thumbnail thumb' if post.image? %>
    </div>
    <%= post.summary %>
  </section>

  <section class="footer-summary">
    <%= raw post.tag.map(&:name).map{ |t| link_to t, tag_path(t), class: 'btn btn-primary btn-sm' }.join(' ') %>
  </section>
</article>